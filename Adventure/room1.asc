function room_RepExec()
{
  
  if(cFabien.Moving && !walkingChannel.IsPlaying){
    walkingChannel = aWalking_in_snow.Play(eRepeat);
    walkingSound = true;
  }
  else if(!cFabien.Moving && walkingSound == true){
    walkingSound = false;
    if(walkingChannel.IsPlaying){
      walkingChannel.Stop();
    }
  }
}

